<% content_for :title do %>
    <%= t('.categories') %>
<% end %>

<% content_for :page_title do %>
    <i class="fa fa-th-list"></i> <%= t('.categories') %>
<% end %>

<%= erp_datalist(
    url: erp_hkstore.list_backend_categories_path,
    keywords: [
        {
            text: t('.name'), name: 'erp_hkstore_categories.name'
        }
    ],
    actions: [
    ],
    filters: [
    ],
    columns: [
        {
            text: t('.name'), name: 'name', value: true, checked: true
        },
        {
            text: t('created_at'), name: 'created_at', value: true, checked: false
        }
    ],
    sort: { sort_by: 'erp_hkstore_categories.created_at', sort_direction: 'desc' }
) %>