<table class="table table-advance table-hover table-striped table-checkable order-column">
    <thead>
        <tr>
            <th width='1%'>
                <%= erp_datalist_check_all %>
            </th>
            <% if get_columns(params).include?("name") %>
                <th class="sortable" sort-by='erp_hkstore_menus.name'>
                    <%= t('.name') %>
                </th>
            <% end %>
            <% if get_columns(params).include?("created_at") %>
                <th class="sortable" sort-by='erp_hkstore_manufacturers.created_at'>
                    <%= t('created_at') %>
                </th>
            <% end %>
            <th width="7%"><%= t('actions') %></th>
        </tr>
    </thead>
    <tbody>
        <% @menus.each do |menu| %>
            <tr class="odd gradeX">
                <td>
                    <%= erp_datalist_check_row(id: menu.id) %>
                </td>
                <% if get_columns(params).include?("name") %>
                    <td>
                        <%= menu.name %>                        
                    </td>
                <% end %>
                <% if get_columns(params).include?("created_at") %>
                    <td><%= menu.created_at.strftime("%d/%m/%Y") %></td>
                <% end %>
                </td>
                <td class="text-right">
                    <%= erp_datalist_row_actions(                        
                    ) %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>

<% if @menus.empty? %>
    <div class="datalist-empty-line"><%= t('.no_matching_records_found') %></div>
<% end %>
        
<%= erp_datalist_pagination(@menus) %>